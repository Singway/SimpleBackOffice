@{
    Layout = "_LayoutEmpty";
}

@model LoginModel

<div class="content-wrapper d-flex align-items-center auth">
    <div class="row flex-grow">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                    <h2>Simple</h2>
                </div>
                <h4>嗨，小伙伴，Come on!</h4>
                <h6 class="font-weight-light">登录进入我的后台</h6>
                <div id="errorMessage" class="text-danger">@ViewBag.ErrorMessage</div>
                <form class="pt-3" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
                    <div class="form-group">
                        <input class="form-control form-control-lg" placeholder="邮箱/登录名" asp-for="LoginAccount">
                        <span asp-validation-for="LoginAccount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-lg" placeholder="密码" asp-for="LoginPassword">
                        <span asp-validation-for="LoginPassword" class="text-danger"></span>
                    </div>
                    <div class="my-2 d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <label class="form-check-label text-muted">
                                <input type="checkbox" class="form-check-input" asp-for="RememberMe"> 记住我
                            </label>
                        </div>
                        @*<a href="#" class="auth-link text-black">忘记密码?</a>*@
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">登录</button>
                    </div>
                    <div class="mb-2">
                        @*<button type="button" class="btn btn-block btn-facebook auth-form-btn">
                <i class="icon-social-facebook mr-2"></i>使用微信登录
            </button>*@
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        没有账号？ <a asp-action="Register" class="text-primary">注册</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>